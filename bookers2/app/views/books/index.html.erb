<h1>New book</h1>

  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %>

    <%= f.submit 'Create ' %>
  <% end %>

<% @books.each do |book| %>
<div>



  <p><%= image_tag 'default-image.jpg' %></p>
  
   <p>title：
 　<%= link_to book_path(book.id) do %>
   <%= book.title %></p>
   <% end %>

  <p>opinion：<%= book.body %></p>
</div>
<% end %>