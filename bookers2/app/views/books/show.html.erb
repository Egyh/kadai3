<div>
  <%= flash[:notice] %>
</div>

<%= render 'users/list', user: @user, book: @book_new %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
   <table class="table table-hover table-inverse">
    <thead>
    <tr></tr>
  </thead>

  <tbody>
  <tr>

<th>
    <%= link_to user_path(@user.id) do %>
      <%= image_tag @user.get_profile_image(80,80) %>
        <div><%= @book.user.name %></div></th>
   <% end %>

<td>
 <%= link_to book_path(@book.id) do %>
  <%= @book.title %></td>
     <% end %>

  <td><%= @book.body %></td>


    <% if @book.user == current_user %>
  <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>


  <td>
  <%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
  <% end %>
  </tbody>
  </table>
  </div>
</div>
